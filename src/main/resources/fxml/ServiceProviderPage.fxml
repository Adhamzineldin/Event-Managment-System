<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="15" padding="15" prefWidth="600">
        <!-- Title -->
        <Label text="Service Provider Dashboard" styleClass="header-label"/>

        <!-- Table View for Requests -->
        <TableView>
            <TableColumn text="Request ID" prefWidth="100"/>
            <TableColumn text="Event Details" prefWidth="250"/>
            <TableColumn text="Customer Name" prefWidth="150"/>
            <TableColumn text="Date Requested" prefWidth="100"/>
        </TableView>

        <!-- Input Fields -->
        <HBox spacing="10">
            <TextField promptText="Set Price"/>
            <TextField promptText="Ready Date"/>
            <Button text="Submit to PM"/>
        </HBox>
    </VBox>
</AnchorPane>
