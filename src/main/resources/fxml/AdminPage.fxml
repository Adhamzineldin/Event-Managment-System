<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.eventmanagmentsystem.controllers.AdminController">
    <stylesheets>
        <URL value="@../css/adminPage.css"/>
    </stylesheets>
    <GridPane layoutX="50" layoutY="50" hgap="10" vgap="10">
        <Label text="Admin Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="adminName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Admin Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="adminEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Admin Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="adminRole" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <TableView fx:id="userTable" GridPane.rowIndex="3" GridPane.columnSpan="2">
            <TableColumn fx:id="colUserName" text="Username" />
            <TableColumn fx:id="colEmail" text="Email" />
            <TableColumn fx:id="colRole" text="Role" />
        </TableView>

        <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="passwordField" promptText="Password" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

        <ComboBox fx:id="roleComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Button fx:id="addButton" text="Add User" onAction="#handleAddUser" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Button fx:id="removeButton" text="Remove User" onAction="#handleRemoveUser" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        <Button fx:id="sendMessageButton" text="Send Message" onAction="#handleSendMessage" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    </GridPane>
</AnchorPane>
