<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="15" padding="15" prefWidth="600">
        <!-- Title -->
        <Label text="Project Manager Dashboard" styleClass="header-label"/>

        <!-- Table View for Customer Requests -->
        <TableView>
            <TableColumn text="Request ID" prefWidth="100"/>
            <TableColumn text="Customer Name" prefWidth="150"/>
            <TableColumn text="Event Details" prefWidth="250"/>
        </TableView>

        <!-- Action Buttons -->
        <HBox spacing="10">
            <Button text="Forward to Service Provider"/>
            <Button text="View Customer"/>
            <Button text="Generate Bill"/>
        </HBox>

        <!-- Communication Field -->
        <Label text="Contact Customers" styleClass="sub-header"/>
        <HBox spacing="10">
            <TextField promptText="Enter Message"/>
            <Button text="Send Message"/>
        </HBox>
    </VBox>
</AnchorPane>
