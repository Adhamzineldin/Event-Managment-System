<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.eventmanagmentsystem.controllers.RegisterController">
    <stylesheets>
        <URL value="@../css/register.css"/>
    </stylesheets>

    <!-- Main layout -->
    <VBox alignment="CENTER" spacing="20" styleClass="root1" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- Page Title -->
        <Label text="Register" styleClass="title"/>

        <!-- Form Container -->
        <VBox alignment="CENTER" spacing="15" styleClass="form">
            <!-- Username Field -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Username:" />
                <TextField fx:id="usernameField" promptText="Enter your username"/>
            </HBox>
            <Label fx:id="usernameError" styleClass="errorLabel"/>

            <!-- Email Field -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Email:" />
                <TextField fx:id="emailField" promptText="Enter your email"/>
            </HBox>
            <Label fx:id="emailError" styleClass="errorLabel"/>

            <!-- Password Field -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Enter your password"/>
            </HBox>
            <Label fx:id="passwordError" styleClass="errorLabel"/>

            <!-- Confirm Password Field -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Confirm Password:" />
                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password"/>
            </HBox>
            <Label fx:id="confirmPasswordError" styleClass="errorLabel"/>

            <!-- Button Section -->
            <HBox spacing="15" alignment="CENTER" styleClass="button-container">
                <Button text="Register" onAction="#Register" styleClass="primary-button"/>
                <Button text="Login" onAction="#goToLogin" styleClass="secondary-button"/>
            </HBox>
        </VBox>

        <!-- General Alert Label -->
        <Label fx:id="alertLabel" styleClass="alertLabel"/>
    </VBox>
</AnchorPane>
